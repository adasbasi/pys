<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class='etiket'>
	Email :&nbsp
	<%= f.email_field :email, :autofocus => true, :placeholder => 'e-posta adresi' %>
  </div>
  <br />
  <div class='etiket'>
	Şifre :&nbsp
	  <%= f.password_field :password, :placeholder => '********' %>
   </div>
  <br />
  <% if devise_mapping.rememberable? -%>
    <div class='etiket'>
	<%= f.check_box :remember_me %>
	Remember_me
    </div>
  <% end -%>
<br />
  <div><%= f.submit "Sign in", :class => 'btn btn-primary' %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>

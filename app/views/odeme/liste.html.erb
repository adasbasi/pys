  </ul>
<% end %>


<% if @aprograms %>
  <h4>Açık Programlar</h4>
  <table class="table table-striped">
    <tr>
      <th>ID</th>
      <th>Program İsmi</th>
      <th>Dönem</th>
      <th>Katsayi</th>
    </tr>
    <% @aprograms.each_with_index do |f,i| %>
      <tr>
        <td><%= i+1 %></td>
        <td><%= @odeme_program[f.program_id].ad %></td>
        <td><%= f.donem %></td>
        <td><%= f.katsayi %></td>
      </tr>
    <% end %>
  </table>
<% end %>
